# 生产环境配置
NODE_ENV=production

# 数据库
DB_PATH=./data/chat.db

# 日志
LOG_LEVEL=info
LOG_FILE=./logs/archive.log

# 备份
BACKUP_ENABLED=true
BACKUP_DIR=./backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETAIN_COUNT=7

# 清理
CLEANUP_ENABLED=true
RETENTION_DAYS=90
MAX_DB_SIZE_MB=1024

# 健康检查
HEALTH_PORT=8080

# 缓冲
BUFFER_SIZE=100
FLUSH_INTERVAL_MS=300000
